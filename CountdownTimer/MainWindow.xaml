<Window x:Class="CountdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CountdownTimer" Height="350" Width="525">
    <StackPanel Margin="15">
        <Label Content="Current Time:" Margin="10"/>
        <TextBox Name="currentTime" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
        <Label Content="Time left:" Margin="10" />
        <TextBox Name="counterTime" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
        <Label Content="End Time:" Margin="10" />
        <TextBox Name="input_endTime" ToolTip="Format: HH:MM, Example 10:00" TextChanged="input_endTime_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Width="80" Height="30" Margin="0"/>        
        <Button Name="btn_startTimer" Click="btn_startTimer_Click" Content="Start" Margin="20" Width="70" Height="30" FontSize="18" />        
    </StackPanel>
</Window>